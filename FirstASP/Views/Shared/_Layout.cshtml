<!DOCTYPE html>
<html>
<head>
    <h1>SHOP-Маркет</h1>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/scripts/jquery-3.3.1.min.js")
    @Scripts.Render("~/scripts/validate.min.js")
    @Scripts.Render("~/scripts/jquery-1.10.2.js")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
    <link href='@Url.Content("~/Content/themes/base/all.css")' rel="stylesheet" type="text/css" />
    <script src='@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")' type="text/javascript"></script>
    <link href='@Url.Content("~/Content/themes/base/jquery-ui.css")' rel="stylesheet" type="text/css" />
</head>
<body>
    <header>

        <img src="/Images/head.png" alt="Логотип"
             width="100" height="100" class="logo">
        <nav>

            <ul>
                <li><a href="/">Главная</a></li>

                <li><a href="#" onclick="return info1()" ;>О Магазине</a></li>

                <li><a href="#" onclick="return info2()" ;>Контакты</a></li>
            </ul>
            @{

                if (ViewBag.Maket != null)
                { <a href="/Home/OrderList">@ViewBag.Maket.login</a> <a href="/Home/LogOut"> Выйти </a>}
            else
            {
                <a href="/Home/Login">Войти</a> <a href="/Users/Create"> Зарегистрироваться </a>
            }

            }
        </nav>
        <br>

        <style>


            nav {
                float: right;
            }

                nav ul {
                    margin: 0;
                    padding: 0;
                    list-style: none;
                }

                nav li {
                    display: inline-block; 
                }

            .goods {
                overflow: hidden;
                font-size: 16px;
            }

                .goods dt, .goods dd {
                    height: 2.5em;
                    line-height: 2.5em;
                    padding: 0 0.625em 0 0.875em;
                    color: #4C565C;
                    box-sizing: border-box;
                }

            dt {
                width: 30%;
                float: left;
                clear: right;
                background: #D3E6DD;
                font-weight: bold;
            }

            dd {
                width: 70%;
                float: right;
                margin-left: 0;
                margin-bottom: .3125em;
                border: 1px solid #BECFC7;
                border-left: none;
            }

            a {
                text-decoration: none;
                display: inline-block;
                letter-spacing: 1px;
                margin: 0 20px;
                font-size: 20px;
                font-family: 'Fredoka One', cursive;
                transition: .3s ease-in-out;
            }

            .link {
                background-position: center bottom;
                background-repeat: no-repeat;
                background-size: 0 2px, 100% 2px;
                color: #1E3A52;
                transition: .5s ease-in-out;
            }

                .link:hover {
                    background-size: 100% 2px, 100% 2px;
                    color: #FE5568;
                }

            div {
                width: 100%;
                text-align: justify;
                text-align: center;
            }
        </style>

    </header>
    @RenderBody()
    @RenderSection("scripts", required: false)


    <footer></footer>
</body>
</html>
