@{

}
@model FirstASP.Models.Users
@using (Html.BeginForm())
{
<div class="form-horizontal">
    <h4> Вход

    </h4>
    <h4>
        @Html.ValidationMessage("InvalidValues", new { @class = "text-danger" })
    </h4>
    <div class="form-group">
        <hr />
        <div class="col-md-10">
            @Html.EditorFor(model => model.login, new { htmlAttributes = new { @class = "form-control",  placeholder = "Логин" } })
            @Html.ValidationMessageFor(model => model.login, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">

        <div class="col-md-10">
            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", placeholder = "Пароль" } })
            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Войти" class="btn btn-default" />
    </div>
</div>
    
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}